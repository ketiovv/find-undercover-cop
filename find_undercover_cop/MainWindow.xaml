<Window x:Class="find_undercover_cop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:find_undercover_cop"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800">
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Buttons-->
            <StackPanel Orientation="Horizontal" 
                        Grid.Row="0" 
                        Background="DarkSlateGray" 
                        Grid.ColumnSpan="2">


            </StackPanel>


            <!-- Drop files here or click here-->
            <Border BorderBrush="Black" 
                    Grid.Row="1" 
                    BorderThickness="3" 
                    Margin="20 25 20 130" 
                    Name="DDplace" 
                    Drop="DDplace_Drop" 
                    AllowDrop="true">
                <TextBlock Text="drop file" 
                           TextAlignment="Center" />
            </Border>
            <Button x:Name="addFiles"
                    Click="addFiles_Click"
                    Content="or click here"
                    Grid.Row="1" 
                    Margin="20 265 20 60"/>
            <!-- TextBox -->
            <StackPanel Grid.Row="1" 
                        Grid.Column="1">
                <Label Content="Path"/>
                <TextBox x:Name="TextBoxPath" 
                         IsEnabled="False" 
                         Margin="5 0"/>
                <Button Content="clear file"
                        Margin="5"
                        Click="buttonClear_Click"/>
                <Label Content="License Plate"
                       HorizontalAlignment="Center"/>
                <Border BorderBrush="Black" 
                        BorderThickness="4"
                        Height="35"
                        Margin="200 5">
                    <TextBlock x:Name="TextBlockLicensePlate"
                               Text="KNT 54891" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="20"/>
                </Border>
                <Button Content="(temp) get plate from textblock"
                        Margin="5"
                        Click="buttonTemp_Click"/>
                <Button x:Name="ButtonCheck"
                        Click="ButtonCheck_Click"
                        Content="check if its cop"
                        Margin="5"/>
                <TextBlock x:Name="TextBlockCop"
                           Text=""
                           HorizontalAlignment="Center"
                           FontSize="20"/>
            </StackPanel>
            <!-- ListBox z plikami-->
            <!--
            <ListBox x:Name="listFiles" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="auto" VerticalAlignment="Bottom"/>
            -->
        </Grid>
    </Border>
</Window>
